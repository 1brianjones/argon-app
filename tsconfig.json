{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "experimentalDecorators": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "lib": [
            "es2015"
        ]
    },
    "exclude": [
        "node_modules",
        "platforms"
    ]
}
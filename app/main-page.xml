<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" backgroundColor="#00000000">
  <Page.actionBar>
    <ActionBar title="Title">
      <ActionBar.titleView>
        <GridLayout columns="*, auto" rows="*">
          <SearchBar col="0" row="0" loaded="searchBarLoaded" hint="Enter a URL"/>
          <Button col="1" row="0" text="&#xE5D2; MENU" class="material-icon" tap="menuButtonClicked"/>
        </GridLayout>
      </ActionBar.titleView>
    </ActionBar>
  </Page.actionBar>
  <Placeholder creatingView="createChannelView"/>
  <AbsoluteLayout id="menu" loaded="menuLoaded" horizontalAlignment="right" visibility="collapsed">
    <StackLayout id="menuContainer" orientation="vertical" verticalAlignment="top">
      <StackLayout orientation="horizontal" tap="newChannelClicked">
        <Label text="&#xE145;" class="material-icon"/>
        <Label text="New Channel"/>
      </StackLayout>
      <StackLayout orientation="horizontal" tap="bookmarksClicked">
        <Label text="&#xE866;" class="material-icon"/>
        <Label text="Bookmarks"/>
      </StackLayout>
      <StackLayout orientation="horizontal" tap="historyClicked">
        <Label text="&#xE889;" class="material-icon"/>
        <Label text="History"/>
      </StackLayout>
      <StackLayout orientation="horizontal" tap="settingsClicked">
        <Label text="&#xE8B8;" class="material-icon"/>
        <Label text="Settings"/>
      </StackLayout>
    </StackLayout>
  </AbsoluteLayout>
</Page>
